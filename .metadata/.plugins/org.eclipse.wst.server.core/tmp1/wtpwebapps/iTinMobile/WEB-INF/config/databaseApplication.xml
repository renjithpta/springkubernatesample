  <bean id="sessionFactory"
              class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
              <property name="dataSource">
                     <ref local="dataSource" />
              </property>
               <property name="packagesToScan" value="org.baeldung.spring.persistence.model" />
              <property name="hibernateProperties">
                     <props>
                           <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
                     </props>
              </property>
             
       </bean>

	<bean id="travelServiceDAO" class="com.ibsplc.itin.database.dao.ITinTravelServiceDao">
		<property name="sessionFactory" ref="sessionFactory" />
		<property name="jdbcDao" ref="travelServiceJdbcDAO"></property>
	</bean>

	<bean id="travelServiceJdbcDAO" class="com.ibsplc.itin.database.dao.ITinTravelServiceJdbcDao">
		<property name="dataSource" ref="dataSource"></property>
	</bean>


</beans>